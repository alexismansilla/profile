= form_with(model: candidate, local: true) do |form|
  - if candidate.errors.any?
    #error_explanation
      %h2
        = pluralize(candidate.errors.count, "error")
        prohibited this candidate from being saved:
      %ul
        - candidate.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_field :name, id: :candidate_name
  .field
    = form.label :last_name
    = form.text_field :last_name, id: :candidate_last_name
  .field
    = form.label :description
    = form.text_area :description, id: :candidate_description
  .actions
    = form.submit
